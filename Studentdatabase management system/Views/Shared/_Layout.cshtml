<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Studentdatabase_management_system</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <div class="container"><h1 class="display-2">Welcome to My Music World </h1></div>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
           
     
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link px-5" asp-controller="home" asp-action="Courses">Courses</a>  
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-5" asp-controller="home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item px-5">
                        <a class="nav-link" asp-controller="home" asp-action="ClassSchedule">Class Schedule</a>
                    </li>
                    <li class="nav-item px-5">
                        <a class="nav-link" asp-controller="home" asp-action="create">Log in</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - Studentdatabase_management_system - <a asp-area="" asp-controller="Home" asp-action="Home">Home</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>
