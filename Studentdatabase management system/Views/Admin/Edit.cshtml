@model Studentdatabase_management_system.ViewModels.EditViewModel
<h1>Edit New Student</h1>

<form asp-controller="Admin" asp-action="Edit" method="post">
    <div class="form-group">
        <input type="hidden" name="Id" value="@Model.Id"/>
        
        <label asp-for="Name">Student Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
        <div class="form-group">
            <label asp-for="BatchId">Batch</label>

            @*@Html.DropDownList("BatchId", Model.Batch, Model.Selectedbatch.Name, new { @class = "form-group" })*@
            @Html.DropDownListFor(x => x.BatchId, Model.Batch);
        </div>
    <input type="submit" value="Update" />
</form>

